<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding = "16dp"
    android:background="@android:color/holo_purple"
    tools:context=".activity_layout">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
       >
    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="507dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="FAQ's"
        android:textColor="#ffffff"
        android:textSize="18sp"


        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="318dp"
            android:layout_height="145dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="We get lot of enquires from people wanting to find out more about rotibank system.Here are some of the most commonly asked questions ,hopefully they will help you to find te information you are looking for."
            android:textColor="#000000"
            android:textSize="18sp"


            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="How can I get involved?"
            android:textColor="#ffffff"
            android:textSize="18sp"


            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="89dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="There are lots of ways you can support rotibank system visit our get involved page to find out more."
            android:textColor="#000000"
            android:textSize="18sp"


            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="How can I donate food?"
            android:textColor="#ffffff"
            android:textSize="18sp"


            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="323dp"
            android:layout_height="73dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="You can make request in our app our volunteer will contact you and take leftover food."
            android:textColor="#000000"
            android:textSize="18sp"


            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="327dp"
            android:layout_height="46dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="How can I become part of rotibank system?"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"


            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="You just need to fill the volunteer form and then you will become part of our service."
            android:textColor="#000000"
            android:textSize="18sp"


            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Is there anyting you won't accept?"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"


            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Yes, we do not redistribute surplus alcohol."
            android:textColor="#000000"
            android:textSize="18sp"


            tools:ignore="MissingConstraints" />


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>